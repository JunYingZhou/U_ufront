.navbar {
  background-color: #eb872a;
  background-size: cover;
  position: relative;
  display: flex;
  flex-direction: column;
}
.navbar .logo1 {
  height: 64rpx;
  display: flex;
}
.navbar .logo1 .logo-image {
  margin: 15px;
  width: 155rpx;
  height: 39rpx;
}
.navbar .logo1 .logo-text {
  flex: 1;
  line-height: 28rpx;
  color: #fff;
  margin-top: 15px;
  padding-left: 20rpx;
  border-left: 1rpx solid #fff;
  font-size: 26rpx;
  transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;
  opacity: 0;
}
.navbar .logo1 .fade-up {
  animation: fadeUp 1s ease-in-out forwards;
}
.navbar .logo {
  display: flex;
  align-items: start;
  height: 64rpx;
}
.navbar .logo .logo-image {
  width: 100rpx;
  height: 39rpx;
}
.navbar .logo .logo-text {
  flex: 1;
  line-height: 28rpx;
  color: #fff;
  margin: 2rpx 0 0 20rpx;
  padding-left: 20rpx;
  border-left: 1rpx solid #fff;
  font-size: 26rpx;
  transition: transform 0.5s ease-in-out, opacity 0.5s ease-in-out;
}
.navbar .logo .fade-up {
  animation: fadeUp 1s ease-in-out forwards;
}
.navbar .search {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx 0 26rpx;
  height: 64rpx;
  margin: 16rpx 20rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
  background-color: rgba(255, 255, 255, 0.5);
}
.navbar .icon-search::before {
  margin-right: 10rpx;
}
.navbar .icon-scan {
  font-size: 30rpx;
  padding: 15rpx;
}
@keyframes fadeUp {
0% {
    transform: translateY(10px);
    opacity: 0;
}
100% {
    transform: translateY(0);
    opacity: 1;
}
}